<div class="item"> 
  <div>Email</div>
  <div class="input">
    <input 
      type="email"
      name="email"
      placeholder="Introduza seu email"
      value="{{user.email}}"
      onblur="Validate.apply(this, 'isEmail')"
      >
  </div>
</div>

<div class="item"> 
  <div>Senha</div>
  <div class="input">
    <input 
      type="password"
      name="password"
      placeholder="Introduza sua senha"
    >
  </div>
</div>



